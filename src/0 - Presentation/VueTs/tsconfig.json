{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es2015",
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "types": [ "webpack-env" ],
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [ "ClientApp/*" ],
      "@helpers/*": [ "ClientApp/components/helpers/*" ]

    }
  },
  "exclude": [
      "bin",
      "node_modules"
  ]
}
